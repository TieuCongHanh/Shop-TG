<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="260dp">
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/shop1"
        android:id="@+id/itemimgavt_product"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Áo xịn không"
        android:textSize="20sp"
        android:id="@+id/itemtxtname_product"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_bolt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_profile"
            android:text=" Đang bán chạy   "
            android:gravity="center"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/itemtxtprice_product"
           android:layout_marginLeft="5dp"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:textSize="16sp"
           android:textColor="@color/tim"
           android:text="300000 vnđ"
           android:gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:gravity="end"
           android:layout_gravity="center"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/itemtxtsl_product"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Đã bán 200"
               android:textColor="@color/black"/>
       </LinearLayout>
   </LinearLayout>


</LinearLayout>