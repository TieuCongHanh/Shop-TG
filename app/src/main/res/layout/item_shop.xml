<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:orientation="vertical"
    android:background="@drawable/bg_img1"
    android:layout_marginRight="20dp"
    android:layout_height="360dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:id="@+id/itemimgavt_shop"
        android:src="@drawable/shop1"
        android:background="@drawable/bg_img"

        />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop đồ ăn"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/itemtxtname_shop"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemtxtdesc_shop"
        android:text="Có tất cả đồ..."
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/itemimg1_shop"
                android:background="@drawable/icon_star"/>
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/itemimg2_shop"
                android:layout_height="20dp"
                android:background="@drawable/icon_star"/>
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/itemimg3_shop"
                android:layout_height="20dp"
                android:background="@drawable/icon_star"/>
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/itemimg4_shop"
                android:layout_height="20dp"
                android:background="@drawable/icon_star"/>
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/itemimg5_shop"
                android:layout_height="20dp"
                android:background="@drawable/icon_star"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="5.0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/txtvote_shop"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#B100FF"
            android:textStyle="bold"
            android:id="@+id/itemtxtslogans_shop"
            android:text="Hãy thỏa mãn yêu cầu của bạn "/>
    </LinearLayout>


</LinearLayout>
</LinearLayout>